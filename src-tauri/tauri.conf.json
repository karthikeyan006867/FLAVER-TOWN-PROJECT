{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Flavor Town - Code Learning",
  "version": "1.0.0",
  "identifier": "com.flavortown.codelearning",
  "build": {
    "frontendDist": "../public",
    "devUrl": "https://flaver-town-project.vercel.app",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Flavor Town - Code Learning Platform",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "url": "https://flaver-town-project.vercel.app"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
